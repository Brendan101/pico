<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.pico.SettingsActivity"
    android:background="@color/primaryBlue">

    <com.app.pico.StyledTextHeader
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/settingsTxt"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="@color/primaryWhite"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingsTxt"
        android:layout_above="@+id/logoImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/primaryWhite" >

        <RelativeLayout
            android:id="@+id/timeLayout"
            android:layout_width="match_parent"
            android:layout_height="96dp" >

            <TextView
                android:text="Repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="38dp"
                android:id="@+id/repeatView"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey"/>

            <ToggleButton
                android:text="S"
                android:textOn="S"
                android:textOff="S"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/saturdayToggle"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey" />
            <ToggleButton
                android:text="F"
                android:textOn="F"
                android:textOff="F"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/saturdayToggle"
                android:layout_toStartOf="@id/saturdayToggle"
                android:id="@+id/fridayToggle"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey" />
            <ToggleButton
                android:text="T"
                android:textOn="T"
                android:textOff="T"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fridayToggle"
                android:layout_toStartOf="@id/fridayToggle"
                android:id="@+id/thursdayToggle"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey" />
            <ToggleButton
                android:text="W"
                android:textOn="W"
                android:textOff="W"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/thursdayToggle"
                android:layout_toStartOf="@id/thursdayToggle"
                android:id="@+id/wednesdayToggle"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey" />
            <ToggleButton
                android:text="T"
                android:textOn="T"
                android:textOff="T"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/wednesdayToggle"
                android:layout_toStartOf="@id/wednesdayToggle"
                android:id="@+id/tuesdayToggle"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey" />
            <ToggleButton
                android:text="M"
                android:textOn="M"
                android:textOff="M"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tuesdayToggle"
                android:layout_toStartOf="@id/tuesdayToggle"
                android:id="@+id/mondayToggle"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey" />
            <ToggleButton
                android:text="S"
                android:textOn="S"
                android:textOff="S"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/mondayToggle"
                android:layout_toStartOf="@id/mondayToggle"
                android:id="@+id/sundayToggle"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey" />

        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/snoozeLayout"
            android:layout_width="match_parent"
            android:layout_height="96dp">

            <TextView
                android:text="Snooze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="38dp"
                android:id="@+id/snoozeView"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey"/>

            <TextView
                android:text="min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="38dp"
                android:id="@+id/timeLblView"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey" />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/timeLblView"
                android:layout_toStartOf="@+id/timeLblView"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/soundLayout"
            android:layout_width="match_parent"
            android:layout_height="96dp" >

            <TextView
                android:text="Sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="38dp"
                android:id="@+id/soundView"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textColor="@color/elementGrey"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="38dp"
                android:id="@+id/soundSpinner"></Spinner>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        android:id="@+id/logoImage"/>

</RelativeLayout>
